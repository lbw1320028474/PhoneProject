<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/personalfragment_video_userconverimage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/video_conver_test" />

        <TextView
            android:id="@+id/personalfragment_video_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="小小的向日葵"
            android:textColor="#2d2d2d"
            android:textSize="@dimen/text_size_xl" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="3dp" >

        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
            android:id="@+id/personalfragment_video_jcvideoview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/personalfragment_video_createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-3-20  22:30"
            android:textColor="#666666" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <ImageView
                android:id="@+id/personalfragment_video_grantmoney_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/video_grant_money" />

            <ImageView
                android:id="@+id/personalfragment_video_shard_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/video_shareng" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_xxxxs"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="10dp"
        android:background="#cecece" />

</LinearLayout>