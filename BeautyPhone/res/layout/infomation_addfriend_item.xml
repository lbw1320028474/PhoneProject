<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/viewgroud"
        android:translationZ="3dp" >

        <ImageView
            android:id="@+id/contactinfomation_addfriend_imageicon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@drawable/infomation_addfriendicon" />

        <LinearLayout
            android:id="@+id/infomationphoneitem_addfriend_adjustlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/contactinfomation_addfriend_imageicon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/contactinfomation_addfriend_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="邀请好友"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_m" />

            <TextView
                android:id="@+id/contactinfomation_addfriend_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/contactinfomation_addfriend_text"
                android:layout_below="@+id/contactinfomation_addfriend_text"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:text="好友通话更稳定更优惠"
                android:textColor="#c8c8c8" />
        </LinearLayout>

        <TextView
            android:id="@+id/contactinfomation_addfriend_addfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="添加好友"
            android:textColor="#375bd0"
            android:textSize="@dimen/text_size_m" />
    </RelativeLayout>

</LinearLayout>